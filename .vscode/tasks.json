                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "Build-Windows"
            }
        },
        {
            "label": "[WINDOWS][BUILD][ALL]",
            "type": "shell",
            "command": "cmake --build Build-Windows --config DEBUG -j16",
