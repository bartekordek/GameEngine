    "version": "2.0.0",
    "tasks": [
        {
            "label": "[LINUX][CMAKE][CREATE]",
            "type": "shell",
            "command": "cd Build-Linux && cmake .. -DCMAKE_BUILD_TYPE=Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "[LINUX][BUILD][DEBUG]",
            "type": "shell",
            "command": "clear && cmake --build Build-Linux --config DEBUG -j64",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "[LINUX][CMAKE][CREATE]"
        },
        {
            "label": "[LINUX][BUILD][DEBUG][04_Hello-Triangle_refactor]",
            "type": "shell",
            "command": "clear && cmake --build Build-Linux --target 04_Hello-Triangle_refactor --config DEBUG -j1",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "[LINUX][CMAKE][CREATE]"
        },
        {
